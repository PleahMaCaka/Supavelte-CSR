{
  "name": "supavelte",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "pnpm test:vitest test:supabase",
    "test:vitest": "vitest",
    "test:supabase": "supabase test db",
    "lint": "eslint .",
    "typegen": "supabase gen types typescript --linked > src/lib/types/gen/supabase.d.ts",
    "init": "pnpm i && cp .env.example .env && pnpm init:android",
    "init:android": "pnpm tauri android init && cd ./src-tauri/gen/android && ./gradlew --refresh-dependencies && pnpm init:android:properties",
    "init:android:properties": "PTS_PATH=\"./src-tauri/gen/android/local.properties\" && touch $PTS_PATH && echo \"sdk.dir=$ANDROID_HOME\" > $PTS_PATH",
    "tauri": "NO_STRIP=true tauri",
    "tauri:icon": "tauri icon static/favicon.png",
    "supabase": "supabase",
    "prepare": "husky"
  },
  "packageManager": "pnpm@9.9.0",
  "lint-staged": {
    "src/**": [
      "eslint"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.0",
    "@supabase/supabase-js": "^2.45.1",
    "@sveltejs/adapter-static": "^3.0.4",
    "@sveltejs/kit": "^2.5.22",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tabler/icons-svelte": "^3.12.0",
    "@tauri-apps/api": "^2.0.0-rc.0",
    "@tauri-apps/cli": "2.0.0-rc.7",
    "@types/eslint": "^9.6.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.10",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.0",
    "eslint-plugin-svelte": "^2.43.0",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "postcss": "^8.4.41",
    "pretendard": "^1.3.9",
    "process": "^0.11.10",
    "sass": "^1.77.8",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.5",
    "svelte-eslint-parser": "^0.41.0",
    "tailwindcss": "^3.4.10",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vitest": "^2.0.5"
  },
  "pnpm": {
    "overrides": {
      "whatwg-url": "^14.0.0"
    }
  }
}
